<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <!-- Judul -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ParkIn DutaMall"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Tombol Pilih Lantai -->
    <LinearLayout
        android:id="@+id/floorSelector"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="#E0E0E0"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.4">

        <Button
            android:id="@+id/btnGroundFloor"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Ground Floor"
            android:textColor="#FFFFFF"
            android:backgroundTint="#5B7DFA"
            android:elevation="0dp"
            android:stateListAnimator="@null"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn1stFloor"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="1st Floor"
            android:textColor="#000000"
            android:backgroundTint="#FFFFFF"
            android:elevation="0dp"
            android:stateListAnimator="@null"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn2ndFloor"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="2nd Floor"
            android:textColor="#000000"
            android:backgroundTint="#FFFFFF"
            android:elevation="0dp"
            android:stateListAnimator="@null"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn3rdFloor"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="3rd Floor"
            android:textColor="#000000"
            android:backgroundTint="#FFFFFF"
            android:elevation="0dp"
            android:stateListAnimator="@null" />
    </LinearLayout>

    <!-- Area Informasi -->
    <LinearLayout
        android:id="@+id/infoLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/floorSelector"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/checkbox_on_background"
                android:tint="#00CC00" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Available Space = 16"
                android:paddingStart="8dp"
                android:textColor="#888888" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_delete"
                android:tint="#CC0000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Used Space = 16"
                android:paddingStart="8dp"
                android:textColor="#888888" />
        </LinearLayout>
    </LinearLayout>

    <!-- Area Parkir -->
    <GridLayout
        android:id="@+id/parkingGrid"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:columnCount="6"
        android:rowCount="7"
        app:layout_constraintTop_toTopOf="@id/floorSelector"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/floorSelector">

        <!-- Baris 1-3: Slot parkir atas -->
        <View android:layout_width="50dp" android:layout_height="80dp" android:layout_margin="4dp" android:background="#EEF2FF"/>
        <View android:layout_width="50dp" android:layout_height="80dp" android:layout_margin="4dp" android:background="#EEF2FF"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnSpan="6"
            android:layout_marginVertical="8dp"
            android:gravity="center"
            android:text="⬇ You Are Here - Entry ⬇"
            android:textColor="#DB1514"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="#5B7DFA"
            android:padding="8dp" />

        <!-- Baris 5-7: Slot parkir bawah -->
        <ImageView android:layout_width="50dp" android:layout_height="80dp" android:layout_margin="4dp" android:background="#FFEBEB" android:src="@drawable/ic_car_top_view" android:scaleType="fitCenter"/>
        <View android:layout_width="50dp" android:layout_height="80dp" android:layout_margin="4dp" android:background="#EEF2FF"/>
        <!-- Tambahkan sisa slot bawah sesuai kebutuhan -->

    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
